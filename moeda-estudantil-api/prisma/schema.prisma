generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
  COMPANY
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  active    Boolean  @default(false)

  student Student?
  teacher Teacher?
  company Company?
}

model Student {
  id        String   @id @default(uuid())
  name      String
  cpf       String   @unique
  address   String
  course    String
  createdAt DateTime @default(now())

  institution   Institution @relation(fields: [institutionId], references: [id])
  institutionId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Teacher {
  id        String   @id @default(uuid())
  name      String
  cpf       String   @unique
  createdAt DateTime @default(now())

  institution   Institution @relation(fields: [institutionId], references: [id])
  institutionId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Company {
  id        String   @id @default(uuid())
  name      String
  cnpj      String   @unique
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Institution {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  students  Student[]
  teachers  Teacher[]
}
