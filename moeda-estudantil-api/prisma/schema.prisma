generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
  COMPANY
  ADMIN
}

enum TransactionType {
  DONATION
  REWARD
  RECHARGE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  student Student?
  teacher Teacher?
  company Company?
}

model Student {
  id        String   @id @default(uuid())
  name      String
  cpf       String   @unique
  address   String
  course    String
  createdAt DateTime @default(now())
  balance   Int      @default(0)

  institution   Institution @relation(fields: [institutionId], references: [id])
  institutionId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  transactions Transaction[]
}

model Teacher {
  id                   String    @id @default(uuid())
  name                 String
  cpf                  String    @unique
  department           String
  createdAt            DateTime  @default(now())
  balance              Int       @default(0)
  lastSemesterRewardAt DateTime?

  institution   Institution @relation(fields: [institutionId], references: [id])
  institutionId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  transactions Transaction[]
}

model Company {
  id        String   @id @default(uuid())
  name      String
  cnpj      String   @unique
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  rewards Reward[]
}

model Institution {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  students  Student[]
  teachers  Teacher[]
}

model Transaction {
  id          String          @id @default(uuid())
  amount      Int
  description String
  createdAt   DateTime        @default(now())
  type        TransactionType

  student   Student? @relation(fields: [studentId], references: [id])
  studentId String?

  teacher   Teacher? @relation(fields: [teacherId], references: [id])
  teacherId String?

  reward   Reward? @relation(fields: [rewardId], references: [id])
  rewardId String?
}

model Reward {
  id          String   @id @default(uuid())
  name        String
  description String
  amount      Int
  createdAt   DateTime @default(now())
  imageUrl    String
  isActive    Boolean  @default(true)

  company   Company @relation(fields: [companyId], references: [id])
  companyId String

  transactions Transaction[]
}
